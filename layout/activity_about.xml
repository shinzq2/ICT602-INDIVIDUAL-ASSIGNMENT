<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pinkBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Full Name -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fullname"
                android:contentDescription="Full Name"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siti Nur Zuhairah Binti Zaidi"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Student ID -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_idcard"
                android:contentDescription="Student ID"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024740897"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Course Code & Name -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_course"
                android:contentDescription="Course Info"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ICT602 - Mobile Technology and Development"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Copyright -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_copyright"
                android:contentDescription="Copyright"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© 2025 Zuhairah Zaidi"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- GitHub Link -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_github"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_github"
                android:contentDescription="GitHub"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"/>
            <TextView
                android:id="@+id/github_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://github.com/shinzq2/ICT602-INDIVIDUAL-ASSIGNMENT"
                android:textColor="@color/deepRed"
                android:textSize="18sp"
                android:autoLink="web"
                android:linksClickable="true"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
