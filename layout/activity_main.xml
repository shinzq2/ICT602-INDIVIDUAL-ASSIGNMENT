<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pinkBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:textColor="@color/black">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utility Budget"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <!-- Month Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Month"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/spinner_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background" />


            <!-- Unit Input -->
            <EditText
                android:id="@+id/edit_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter electricity used (kWh)"
                android:textColorHint="@color/grey"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/hotPink"
                android:textColor="@color/black"/>

            <!-- Rebate Input -->
            <EditText
                android:id="@+id/edit_rebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter rebate (%) (0 - 5)"
                android:textColorHint="@color/grey"
                android:inputType="numberDecimal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/hotPink"
                android:textColor="@color/black"/>

            <!-- Calculate Button -->
            <Button
                android:id="@+id/button_calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/deepRed"
                android:textColor="@android:color/white"/>

            <!-- Output: Total Charges -->
            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Charges: RM 0.00"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>

            <!-- Output: Final Cost -->
            <TextView
                android:id="@+id/text_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Cost after Rebate: RM 0.00"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save to Database"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/deepRed"
                android:textColor="@android:color/white"/>

            <!-- View Records Button -->
            <Button
                android:id="@+id/button_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View All Records"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/hotPink"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/button_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About App"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

